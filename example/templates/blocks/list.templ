				</ul>
			</nav>
		</div>
	</div>
	<!-- drawer -->
	<div
		id="drawer-content"
		hx-swap-oob="innerHTML"
		class="fixed top-0 right-0 z-40 h-screen p-4 overflow-y-auto transition-transform translate-x-full bg-white min-w-96 w-2/5 dark:bg-gray-800"
		tabindex="-1"
		aria-labelledby="drawer-right-label"
